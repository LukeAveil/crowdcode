<div class='homepage-container'>

	<div class='image-container'>
		<img class='homepage-pic'src='./images/desk.jpg' />
		<span class='picture-text'>Our mission is to help bring tech projects to life</span>
	</div>

	<div>
		<div class='sub-title'>Recommended for you:</div>
		<div class='projects-recommended'>
			<% @projects = @projects.sort_by {|project| project.launch_date} %>
			<% @projects.each do |project| %>
				<div class='project-container'>
					<div class='image-container'><img class='project-image' src='./images/idea.jpg' /></div>
					<div class='text-container'>
						<p class='bold-text'><%= link_to project.name, project_path(project) %></p>
						<p><%= project.description %><p>
						<p><span class='bold-text'>Launch date: </span><%= project.launch_date.strftime('%d/%m/%Y') %></p>
						<p><span class='bold-text'>Posted by: </span> <%= User.find(project.user_id).email %></p>
					</div>
		</div>
			<% end %>
		</div>

	<div class='footer'>
		<a href='/'><img class='full-logo-footer' src='/images/full_logo.png'/></a>
	</div>

	</div>






