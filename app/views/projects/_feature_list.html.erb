<table>
	<tr>
    <th>Feature Name</th>
    <th>Description</th> 
    <th>Deadline</th>
    <th>Status</th>
  </tr>

	<% @project.features.each do |feature| %>
		<tr>	  
		  <td><%= link_to feature.name, feature_path(feature) %></td>
		  <td><%= feature.description %></td>
		  <td><%= feature.deadline.strftime("%y/%m/%d") %></td>

		  <td><%= render "display_assigned_dev", :feature => feature %></td>
		</tr>

	<% end %>

</table>

  
  